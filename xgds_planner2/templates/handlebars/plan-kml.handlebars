<Document>

<Style id="station">
    <IconStyle>
    	<scale>1.0</scale>
        <Icon>
            <href>{{ options.placemarkCircleUrl }}</href>
            <heading>0.0</heading>
        </Icon>
    </IconStyle>
</Style>

<Style id="selectedStation">
    <IconStyle>
        <scale>1.5</scale>
        <Icon>
            <href>{{ options.placemarkCircleHighlightedUrl }}</href>
            <heading>0.0</heading>
        </Icon>
    </IconStyle>
</Style>

<Style id="midpoint">
    <IconStyle>
    	<scale>0.6</scale>
        <Icon>
            <href>{{ options.placemarkCircleUrl }}</href>
        </Icon>
        <color>80ffffff</color>
    </IconStyle>
</Style>

<Style id="direction">
    <IconStyle>
    	<scale>0.85</scale>
    	<heading>0.0</heading>
        <Icon>
            <href>{{ options.placemarkDirectionalUrl }}</href>
        </Icon>
    </IconStyle>
</Style>

<Style id="selectedDirection">
    <IconStyle>
    	<scale>1.5</scale>
        <heading>0.0</heading>
        <Icon>
            <href>{{ options.placemarkSelectedDirectionalUrl }}</href>
        </Icon>
    </IconStyle>
</Style>

<Style id="segment">
    <LineStyle>
        <color>ff0000ff</color>
        <width>{{ options.planLineWidthPixels }}</width>
    </LineStyle>
</Style>

<Style id="segment_with_commands">
    <LineStyle>
        <color>ffff0000</color>
        <width>{{ options.planLineWidthPixels }}</width>
    </LineStyle>
</Style>

<Style id="polygon">
	<LineStyle>
        <color>ffff0000</color>
        <width>{{ options.planLineWidthPixels }}</width>
    </LineStyle>
    <PolyStyle>
    	<fill>1</fill>
    	<outline>1</outline>
    	<color>ffff0000</color>
    </PolyStyle>
</Style>

</Document>
