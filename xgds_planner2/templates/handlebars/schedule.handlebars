<div class="schedule" id="schedule">
  <form name='ScheduleForm' id="scheduleForm" action="#" method="post">
		<input type="hidden" name="planIds" id="id_planIds" value="{{planId}}"></input>
		<input type="hidden" id="id_planExecutionId" name="planExecutionId" value="{{#if planExecution}}{{planExecution.pk}}{{else}}{{/if}}"></input>
		<table>
		<tr>
			<td><label for="id_schedule_date">Start</label></td>
			<td><input type="text" name="schedule_date" id="id_schedule_date" {{#if planned_start_time}}value="{{ planned_start_time }}"{{/if}}</input></td>
		</tr>
		<tr>
			<td><label for="id_flight">Flight</label></td>
			<td><select name="flight" id="id_flight"> {{#each flight_names}}
		        <option value="{{this}}" {{#if ../planExecution}}{{flightSelected this ../planExecution.flight}}{{/if}}>{{this}}</option>
		        {{/each}}
		        </select>
		    </td>
		</tr>
		</table>
		<input class="btn btn-primary" id="submit_button" type="submit" value="Save">
	</form>
</div>
<div id="schedule_message" style="color:red;"><br/></div>

